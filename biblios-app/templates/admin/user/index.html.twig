{# templates/admin/user/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <section class="container px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des utilisateurs</h1>
        <a href="{{ path('app_register') }}" class="btn btn-primary">Ajouter un utilisateur</a>
    </div>
        <ul class="list-group list-group-flush">
            {% for user in users %}
                <div class="card mb-1">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="stretched-link link-dark text-decoration-none">
                                <div >
                                <h4 class="mb-1">{{ user.firstname }} {{ user.lastname }}</h4>
                                <p><strong>Pseudo</strong> : {{ user.username }}</p>
                                </div>
                            </a>
                            <div>
                                <small>Email : <strong>{{ user.email }}</strong> - </small>
                                <small class="text-muted">Identifiant : {{ user.id }}</small>
                            </div>
                            

                        </div>
                    </div>
                </div>
            {% else %}
                <li>Aucun enregistrement en base de donnÃ©es.</li>
            {% endfor %}
        </ul>
        {{ pagerfanta(users, 'twitter_bootstrap5') }}
    </section>
{% endblock %}